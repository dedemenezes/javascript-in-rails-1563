<p style="color: green"><%= notice %></p>

<h1>Monuments</h1>

<div data-controller="insert-in-list">
  <div id="monuments" data-insert-in-list-target='list'>
    <% @monuments.each do |monument| %>
      <%= render monument %>
    <% end %>
  </div>

  <%#= link_to "New monument", new_monument_path %>

  <div data-controller="toggle" >
    <button class="btn btn-primary mb-3"
            data-action="click->toggle#fire">Add new monument</button>
    <div class="d-none" data-toggle-target='toggableElement'>
      <%= render 'form', monument: @monument %>
    </div>
  </div>
</div>
